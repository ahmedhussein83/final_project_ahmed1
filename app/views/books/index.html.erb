<p id="notice"><%= notice %></p>

<h1>Book your hotel</h1>

<table>
  <thead>
    <tr>
      <th>Check in</th>
      <th>Check out</th>
      <th>Adults</th>
      <th>Kids</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.check_in %></td>
        <td><%= book.check_out %></td>
        <td><%= book.adults %></td>
        <td><%= book.kids %></td>
        <td><%= book.hotel.name %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Book Now', new_book_path %>
